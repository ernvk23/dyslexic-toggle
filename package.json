{
    "name": "dyslexia-away",
    "version": "0.9.10",
    "description": "A simple browser extension that applies the OpenDyslexic font. For some of us, that small change makes reading a lot easier.",
    "main": "background.js",
    "scripts": {
        "build": "npm run build:chrome && npm run build:firefox",
        "build:chrome": "node app/build.js chrome",
        "build:firefox": "node app/build.js firefox",
        "clean": "rm -rf dist/"
    },
    "keywords": [
        "browser-extension",
        "dyslexia",
        "accessibility",
        "font",
        "opendyslexic",
        "chrome",
        "firefox"
    ],
    "author": "ernvk23",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/ernvk23/dyslexia-away.git"
    },
    "devDependencies": {
        "archiver": "^5.3.1",
        "fs-extra": "^11.1.1"
    },
    "private": true,
    "engines": {
        "node": ">=18.0.0"
    }
}